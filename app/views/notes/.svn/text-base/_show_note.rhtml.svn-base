<div class="note" id="note_section_<%= note.id %>">
<p class="note_header" id="note_header_<%= note.id %>">Note by <%= note.author.friendly_name %> on <%= note.created_at.strftime "%h %d" %> at <%= note.created_at.strftime "%r" %> <% if note.author == current_user -%><span class="note_controls">[<%= link_to_remote('Edit', {:url => formatted_store_edit_note_path(:format => 'js', :form_type => note.form_instance.data_type, :form_id => note.form_instance.id, :id => note.id), :method => :get}, {:id => "edit_link_#{note.id}"})+" / " %><%= link_to_remote 'Remove', :url => store_note_path(:form_type => note.form_instance.data_type, :form_id => note.form_instance.id, :id => note.id), :confirm => 'Delete this note?', :method => :delete %>]</span><% end -%></p>
<p class="note_text" id="note_text_<%= note.id %>" ondblclick="<%= remote_function(:url => formatted_store_edit_note_path(:format => 'js', :form_type => note.form_instance.data_type, :form_id => note.form_instance.id, :id => note.id), :method => :get, :html => {:id => "edit_link_#{note.id}"}) %>"><%= note.text %></p>
<% if note.attachment -%>
	<p>Attached file: <%= File.basename(note.attachment) %><br /> <%= link_to icon_for(note.attachment), store_attachment_note_path(:form_status => params[:form_status], :form_type => params[:form_type], :form_id => params[:form_id], :id => note.id) %></p>
<% end -%>
</div>
