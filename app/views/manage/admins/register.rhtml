<%= error_messages_for :admin %>
<% form_for :admin, :url => user_account_url(:domain => @admin.domain, :action => 'activate') do |f| -%>
<p>Hello, <%= @admin.friendly_name %><%= ", your username is <em>#{@admin.username}</em>. <br />Please create a password." if !@admin.username.blank? -%>
<%= ". Please create a username and password." if @admin.username.blank? -%>

<p><label for="username">Username</label><br/>
<%= f.text_field :username %></p>

<!-- I'd like to have a live JS password-strength indicator in here... -->

<p><label for="password">Password</label><br/>
<%= f.password_field :password %></p>

<p><label for="password_confirmation">Confirm Password</label><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= submit_tag 'Activate' %></p>
<% end -%>
