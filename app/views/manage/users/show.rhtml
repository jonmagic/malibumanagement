<h2><%= @user.friendly_name %>'s Account</h2>
<p><small>Store: <%= @user.store.friendly_name %><br />
Username: <em><%= @user.username %></em></small></p>
<p>Full Name<a href="javascript:void(0)" id="edit_friendly_name_<%= @user.id %>">(edit)</a>:<br />
	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <%= in_place_editor_field :user, 'friendly_name', {}, :rows => 1, :external_control => "edit_friendly_name_#{@user.id}", :url => {:store_id => @user.store.id, :action => 'set_user_friendly_name', :id => @user.id} %></p>
<p>Email<a href="javascript:void(0)" id="edit_email_<%= @user.id %>">(edit)</a>:<br />
	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <%= in_place_editor_field :user, 'email', {}, :rows => 1, :external_control => "edit_email_#{@user.id}", :url => {:store_id => @user.store.id, :action => 'set_user_email'} %></p>
<p><%= link_to 'Register!', register_users_path(@user.store.alias)+"?activation_code="+@user.activation_code if !@user.activation_code.blank? %>&nbsp;</p>
