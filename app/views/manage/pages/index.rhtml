<h2>Listing pages</h2>

<table>
  <thead>
    <th>Page Title</th>
	<th>|</th>
	<th>Actions</th>
  </thead>
  
<% for page in @pages %>
  <tr>
    <td><%= page.title %></td>
	<td>|</td>
    <td><%= link_to 'View', page_path(page.stub), :target => '_new' %> - <%= link_to 'Edit', manage_edit_page_path(page) %> - <%= link_to 'Destroy', manage_page_path(page), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Page', manage_new_page_path %>
